# File upload
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE_MB=50

# CORS
CORS_ORIGINS=["http://localhost:3200"]

# App
DEBUG=false

# PortOne v2
PORTONE_API_KEY=your-portone-api-key
PORTONE_API_SECRET=your-portone-api-secret

